@{
    ViewBag.Title = SharedResource.About;
}

<div class="container padding-vertical">
    <div class="jumbotron text-center">
        <h1>@SharedResource.About</h1>
        <p class="lead">Your Trusted Partner in Enterprise Server Solutions</p>
    </div>

    <!-- Mission Section -->
    <div class="row mission-section">
        <div class="col-md-6">
            <h2>Our Mission</h2>
            <p>At ServerCraft, we are dedicated to providing cutting-edge server solutions that empower businesses to achieve their full potential. Our mission is to deliver reliable, scalable, and secure server infrastructure that meets the evolving needs of modern enterprises.</p>
        </div>
        <div class="col-md-6">
            <div class="mission-stats">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="stat-box">
                            <h3 class="counter">10</h3>
                            <p>Years of Experience</p>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="stat-box">
                            <h3 class="counter">5000</h3>
                            <p>Servers Deployed</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <div class="stat-box">
                            <h3 class="counter">1000</h3>
                            <p>Happy Clients</p>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="stat-box">
                            <h3 class="counter">24</h3>
                            <p>Support Hours</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Values Section -->
    <div class="row values-section">
        <div class="col-md-12 text-center">
            <h2>Our Core Values</h2>
        </div>
        <div class="col-md-3">
            <div class="value-card">
                <i class="glyphicon glyphicon-ok-circle"></i>
                <h3>Reliability</h3>
                <p>We deliver server solutions you can trust, backed by industry-leading warranties and support.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="value-card">
                <i class="glyphicon glyphicon-cog"></i>
                <h3>Innovation</h3>
                <p>Staying ahead of technology trends to provide cutting-edge solutions for your business.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="value-card">
                <i class="glyphicon glyphicon-user"></i>
                <h3>Customer Focus</h3>
                <p>Your success is our priority. We're committed to understanding and meeting your needs.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="value-card">
                <i class="glyphicon glyphicon-lock"></i>
                <h3>Security</h3>
                <p>Enterprise-grade security measures to protect your critical infrastructure.</p>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row team-section">
        <div class="col-md-12 text-center">
            <h2>Meet Our Team</h2>
        </div>
        <div class="col-md-4">
            <div class="team-member">
                <img src="~/Content/images/team/ceo.jpg" alt="CEO" class="img-circle" />
                <h3>John Smith</h3>
                <p class="title">CEO & Founder</p>
                <p>20+ years of experience in enterprise IT solutions</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="team-member">
                <img src="~/Content/images/team/cto.jpg" alt="CTO" class="img-circle" />
                <h3>Sarah Johnson</h3>
                <p class="title">Chief Technology Officer</p>
                <p>Expert in server architecture and cloud solutions</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="team-member">
                <img src="~/Content/images/team/support.jpg" alt="Support Lead" class="img-circle" />
                <h3>Michael Brown</h3>
                <p class="title">Support Team Lead</p>
                <p>Dedicated to ensuring your servers run smoothly</p>
            </div>
        </div>
    </div>

    <!-- Partners Section -->
    <div class="row partners-section">
        <div class="col-md-12 text-center">
            <h2>Our Partners</h2>
            <div class="partner-logos">
                <img src="~/Content/images/partners/dell.png" alt="Dell" />
                <img src="~/Content/images/partners/hp.png" alt="HP" />
                <img src="~/Content/images/partners/lenovo.png" alt="Lenovo" />
                <img src="~/Content/images/partners/cisco.png" alt="Cisco" />
                <img src="~/Content/images/partners/ibm.png" alt="IBM" />
            </div>
        </div>
    </div>

    <!-- Contact CTA -->
    <div class="row contact-cta">
        <div class="col-md-12 text-center">
            <h2>Ready to Transform Your Infrastructure?</h2>
            <p>Contact our team of experts to discuss your server needs</p>
            <a href="@Url.Action("Contact", "Home")" class="btn btn-primary btn-lg">Get in Touch</a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Counter animation
            $('.counter').each(function () {
                $(this).prop('Counter', 0).animate({
                    Counter: $(this).text()
                }, {
                    duration: 2000,
                    easing: 'swing',
                    step: function (now) {
                        $(this).text(Math.ceil(now));
                    }
                });
            });

            // Team member hover effect
            $('.team-member').hover(
                function () {
                    $(this).find('img').addClass('hover');
                },
                function () {
                    $(this).find('img').removeClass('hover');
                }
            );
        });
    </script>
}
