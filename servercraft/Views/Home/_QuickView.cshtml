@model servercraft.Models.ViewModels.ServerViewModel

<div class="quick-view-content">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <p class="text-muted">@Model.Description</p>
            
            <div class="server-specs">
                <h4>@SharedResource.ServerDetails</h4>
                <ul class="list-unstyled">
                    <li><i class="fas fa-microchip"></i> <strong>Processor:</strong> @Model.Processor</li>
                    <li><i class="fas fa-memory"></i> <strong>Memory:</strong> @Model.Memory</li>
                    <li><i class="fas fa-hdd"></i> <strong>Storage:</strong> @Model.Storage</li>
                    <li><i class="fas fa-network-wired"></i> <strong>Network:</strong> @Model.FullSpecs.Network</li>
                    <li><i class="fas fa-bolt"></i> <strong>Power:</strong> @Model.FullSpecs.Power</li>
                    <li><i class="fas fa-box"></i> <strong>Form Factor:</strong> @Model.FullSpecs.FormFactor</li>
                </ul>
            </div>

            <div class="server-price">
                @if (Model.OldPrice.HasValue)
                {
                    <span class="old-price">@Model.OldPrice.Value.ToString("C")</span>
                }
                <span class="price">@Model.Price.ToString("C")</span>
            </div>

            <div class="quick-view-actions">
                <button class="btn btn-primary add-to-cart" data-server-id="@Model.Id">
                    <i class="fas fa-shopping-cart"></i> @SharedResource.AddToCart
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .quick-view-content {
        padding: 20px;
    }

    .quick-view-content img {
        max-height: 400px;
        object-fit: contain;
    }

    .quick-view-content h3 {
        margin-bottom: 15px;
        color: #1a237e;
    }

    .server-specs {
        margin: 20px 0;
    }

    .server-specs h4 {
        margin-bottom: 15px;
        color: #1a237e;
    }

    .server-specs li {
        margin-bottom: 10px;
        padding-left: 25px;
        position: relative;
    }

    .server-specs i {
        position: absolute;
        left: 0;
        top: 3px;
        color: #1a237e;
    }

    .server-price {
        margin: 20px 0;
    }

    .old-price {
        text-decoration: line-through;
        color: #6c757d;
        margin-right: 10px;
    }

    .price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #1a237e;
    }

    .quick-view-actions {
        margin-top: 20px;
    }
</style> 