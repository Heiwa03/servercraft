@model servercraft.Models.ViewModels.ServerViewModel

<div class="quick-view-content">
    <div class="row align-items-center">
        <div class="col-md-5 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid quick-view-img">
        </div>
        <div class="col-md-7">
            <h2 class="server-title">@Model.Name</h2>
            <p class="text-muted server-desc">@Model.Description</p>
            <div class="server-specs mb-3">
                <h5 class="specs-title">@SharedResource.ServerDetails</h5>
                <ul class="list-unstyled mb-2">
                    <li><i class="fas fa-microchip"></i> <strong>Processor:</strong> @Model.Processor</li>
                    <li><i class="fas fa-memory"></i> <strong>Memory:</strong> @Model.Memory</li>
                    <li><i class="fas fa-hdd"></i> <strong>Storage:</strong> @Model.Storage</li>
                    @if (Model.FullSpecs != null)
                    {
                        <li><i class="fas fa-network-wired"></i> <strong>Network:</strong> @Model.FullSpecs.Network</li>
                        <li><i class="fas fa-bolt"></i> <strong>Power:</strong> @Model.FullSpecs.Power</li>
                        <li><i class="fas fa-box"></i> <strong>Form Factor:</strong> @Model.FullSpecs.FormFactor</li>
                    }
                    else
                    {
                        <li colspan="3"><em>Full specifications not available.</em></li>
                    }
                </ul>
            </div>
            <div class="server-price mb-3">
                @if (Model.OldPrice.HasValue)
                {
                    <span class="old-price">@Model.OldPrice.Value.ToString("C")</span>
                }
                <span class="price">@Model.Price.ToString("C")</span>
            </div>
            <div class="quick-view-actions">
                <button class="btn btn-primary add-to-cart" data-server-id="@Model.Id">
                    <i class="fas fa-shopping-cart"></i> @SharedResource.AddToCart
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.quick-view-content {
    padding: 30px 20px 20px 20px;
}
.quick-view-img {
    max-width: 260px;
    max-height: 220px;
    object-fit: contain;
    margin: 0 auto 10px auto;
    display: block;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    background: #f8f9fa;
}
.server-title {
    margin-bottom: 10px;
    color: #1a237e;
    font-size: 2rem;
    font-weight: 600;
}
.server-desc {
    margin-bottom: 18px;
    font-size: 1.05rem;
}
.server-specs {
    margin-bottom: 18px;
}
.specs-title {
    margin-bottom: 10px;
    color: #1a237e;
    font-size: 1.1rem;
    font-weight: 500;
}
.server-specs li {
    margin-bottom: 7px;
    padding-left: 25px;
    position: relative;
    font-size: 1rem;
}
.server-specs i {
    position: absolute;
    left: 0;
    top: 3px;
    color: #1a237e;
}
.server-price {
    margin-bottom: 10px;
}
.old-price {
    text-decoration: line-through;
    color: #6c757d;
    margin-right: 10px;
}
.price {
    font-size: 1.4rem;
    font-weight: bold;
    color: #1a237e;
}
.quick-view-actions {
    margin-top: 10px;
}
@@media (max-width: 767px) {
    .quick-view-img {
        max-width: 100%;
        max-height: 180px;
    }
    .server-title {
        font-size: 1.3rem;
    }
}
</style> 