@{
    ViewBag.Title = "Contact";
}

<div class="container" style="margin-top: 70px; max-width: 700px;">
    <h2>Contact Us</h2>
    <p class="lead">We'd love to hear from you! Please fill out the form below and we'll get back to you as soon as possible.</p>
    <div class="row">
        <div class="col-md-7">
            <form method="post" action="#" id="contactForm">
                <div class="form-group mb-3">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required placeholder="Your Name">
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required placeholder="you@email.com">
                </div>
                <div class="form-group mb-3">
                    <label for="subject">Subject</label>
                    <input type="text" class="form-control" id="subject" name="subject" required placeholder="Subject">
                </div>
                <div class="form-group mb-3">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required placeholder="Type your message here..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Send Message</button>
            </form>
        </div>
        <div class="col-md-5">
            <div class="contact-info p-3 bg-light rounded">
                <h5>Contact Information</h5>
                <p><i class="fas fa-map-marker-alt"></i> 123 Server St, Tech City, Country</p>
                <p><i class="fas fa-envelope"></i> support@servercraft.com</p>
                <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
                <hr />
                <h6>Business Hours</h6>
                <p>Mon - Fri: 9:00 AM - 6:00 PM<br />Sat - Sun: Closed</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple client-side validation feedback
        $(function() {
            $('#contactForm').on('submit', function(e) {
                e.preventDefault();
                // You can add AJAX here to send the form data to your server
                alert('Thank you for contacting us! We will get back to you soon.');
                this.reset();
            });
        });
    </script>
}

<style>
.contact-info {
    font-size: 1rem;
    margin-top: 20px;
}
.contact-info i {
    color: #1a237e;
    margin-right: 8px;
}
#contactForm label {
    font-weight: 500;
}
#contactForm .form-control {
    border-radius: 6px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}
#contactForm .btn-primary {
    background: #1a237e;
    border: none;
    font-weight: 600;
    margin-top: 10px;
}
#contactForm .btn-primary:hover {
    background: #0d47a1;
}
</style>