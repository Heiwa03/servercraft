@model servercraft.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h3 class="change-password-title">@ViewBag.Title</h3>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "change-password-form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="change-password-fields">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <label for="OldPassword">Current password</label>
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Current password" })

        <label for="NewPassword">New password</label>
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New password" })

        <label for="ConfirmPassword">Confirm new password</label>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm new password" })

        <div style="text-align:center; margin-top:16px;">
            <input type="submit" value="Change password" class="btn btn-default" />
        </div>
    </div>
}

<style>
.change-password-title {
    text-align: center;
    font-size: 1.3em;
    margin-bottom: 10px;
    font-weight: 600;
}
.change-password-form {
    max-width: 240px;
    margin: 0 auto;
}
.change-password-fields label {
    display: block;
    margin-top: 10px;
    margin-bottom: 4px;
    font-weight: 500;
}
.change-password-fields .form-control {
    margin-bottom: 6px;
    box-sizing: border-box;
}
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 