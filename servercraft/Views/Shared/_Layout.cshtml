<!-- Views/Shared/_Layout.cshtml -->
@using servercraft.Resources
@{
    ViewBag.Title = "ServerCraft";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @SharedResource.AppName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="display: flex; align-items: center;">
                    <img src="/Content/images/servercraft-logo.svg" alt="ServerCraft Logo" />
                    ServerCraft
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(SharedResource.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(SharedResource.About, "About", "Home")</li>
                    <li>@Html.ActionLink(SharedResource.Contact, "Contact", "Home")</li>
                    <li>@Html.ActionLink(SharedResource.Servers, "Index", "Product")</li>
                    <li>@Html.ActionLink(SharedResource.Cart, "Index", "Cart")</li>
                </ul>
                <form class="navbar-form navbar-right" role="search" method="get" action="@Url.Action("Index", "Product")" style="margin-right: 15px;">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search for servers..." style="width: 180px;">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LanguageSelector")
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @SharedResource.AppName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>