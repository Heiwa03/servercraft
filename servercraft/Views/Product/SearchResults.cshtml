@model List<servercraft.Models.ViewModels.ServerViewModel>
@{
    ViewBag.Title = "Search Results";
    var query = ViewBag.Query as string;
}

<div class="container" style="margin-top: 70px;">
    <h2>Search Results</h2>
    @if (!string.IsNullOrWhiteSpace(query))
    {
        <p>Results for <strong>@query</strong>:</p>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var server in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@server.ImageUrl" class="card-img-top" alt="@server.Name" style="max-height:180px;object-fit:contain;">
                        <div class="card-body">
                            <h5 class="card-title">@server.Name</h5>
                            <p class="card-text">@server.Description</p>
                            <p class="card-text"><strong>Price:</strong> @server.Price.ToString("C")</p>
                            <a href="@Url.Action("Details", "Product", new { id = server.Id })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No products found matching your search.</div>
    }
</div>

<style>
.card {
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    border-radius: 8px;
    margin-bottom: 20px;
    transition: box-shadow 0.2s;
}
.card:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.13);
}
.card-img-top {
    border-radius: 8px 8px 0 0;
    background: #f8f9fa;
    padding: 10px;
}
.card-body {
    padding: 15px;
}
.card-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
}
.card-text {
    font-size: 0.97rem;
    margin-bottom: 8px;
}
.btn-primary {
    width: 100%;
}
.row {
    display: flex;
    flex-wrap: wrap;
    margin-left: -10px;
    margin-right: -10px;
}
.col-md-4 {
    flex: 0 0 33.3333%;
    max-width: 33.3333%;
    padding-left: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
}
@@media (max-width: 991px) {
    .col-md-4 {
        flex: 0 0 50%;
        max-width: 50%;
    }
}
@@media (max-width: 767px) {
    .col-md-4 {
        flex: 0 0 100%;
        max-width: 100%;
    }
}
</style> 